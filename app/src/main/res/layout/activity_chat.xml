<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFEFEF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#FFFFFF">
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"/>
        <TextView
            android:id="@+id/chatTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:text="Chat"
            android:textStyle="bold"
            android:textSize="18sp"/>
    </LinearLayout>

    <!-- Session Ended Banner -->
    <TextView
        android:id="@+id/sessionEndedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Session Ended"
        android:textStyle="bold"
        android:textColor="#B00020"
        android:background="#FFF1F1"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagesRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#FFFFFF">

        <EditText
            android:id="@+id/messageInput"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:hint="Type a message"
            android:padding="12dp"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/sendButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_send"
            android:contentDescription="Send"/>
    </LinearLayout>

    <!-- Doctor notes section (visible to doctor after session end) -->
    <LinearLayout
        android:id="@+id/doctorNotesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#FFFFFF"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Session Notes"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/doctorNotesEditText"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top|start"
            android:background="@android:color/transparent"
            android:hint="Write notes here..."/>

        <Button
            android:id="@+id/uploadReportButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload PDF Report"/>
    </LinearLayout>

    <!-- User report download (visible to user when report is ready) -->
    <LinearLayout
        android:id="@+id/userReportContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="end"
        android:background="#FFFFFF"
        android:visibility="gone">

        <Button
            android:id="@+id/downloadReportButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download Report"/>
    </LinearLayout>

</LinearLayout>
