<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F0F4F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:src="@drawable/ic_back"
            android:background="@drawable/bg_back_button"
            android:contentDescription="Back"
            android:elevation="3dp"
            android:layout_marginBottom="20dp"/>


        <!-- Icon with rounded square background -->
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_icon_rounded_sqaure"
            android:elevation="6dp"
            android:layout_marginTop="24dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:contentDescription="Stethoscope icon"
                android:src="@drawable/ic_stethoscope"
                android:tint="@android:color/white" />
        </FrameLayout>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor Sign Up"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="32dp"/>

        <!-- Full Name Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full name"
            android:textColor="#475569"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Full Name Input -->
        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/edittext_rounded"
            android:hint="Enter your full name"
            android:textColorHint="#94A3B8"
            android:textColor="#1E293B"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="textPersonName"
            android:textSize="15sp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="18dp"/>

        <!-- Email Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#475569"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Email Input -->
        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/edittext_rounded"
            android:hint="Enter your email"
            android:textColorHint="#94A3B8"
            android:textColor="#1E293B"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="textEmailAddress"
            android:textSize="15sp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="18dp"/>

        <!-- Password Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#475569"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Password Input -->
        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/edittext_rounded"
            android:hint="Enter your password"
            android:textColorHint="#94A3B8"
            android:textColor="#1E293B"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="textPassword"
            android:textSize="15sp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="18dp"/>

        <!-- Gender Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textColor="#475569"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Gender Input -->
        <EditText
            android:id="@+id/genderEditText"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/edittext_rounded"
            android:hint="Gender (Male/Female/Other)"
            android:textColorHint="#94A3B8"
            android:textColor="#1E293B"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="textCapWords"
            android:textSize="15sp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="18dp"/>

        <!-- Specialist Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specialist"
            android:textColor="#475569"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Specialist Input -->
        <EditText
            android:id="@+id/specialistEditText"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/edittext_rounded"
            android:hint="e.g., Cardiologist, Dermatologist"
            android:textColorHint="#94A3B8"
            android:textColor="#1E293B"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="textCapWords"
            android:textSize="15sp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="18dp"/>

        <!-- Phone Number Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textColor="#475569"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Phone Number Input -->
        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/edittext_rounded"
            android:hint="Enter your phone number"
            android:textColorHint="#94A3B8"
            android:textColor="#1E293B"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="phone"
            android:textSize="15sp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="28dp"/>

        <!-- Create Account Button -->
        <Button
            android:id="@+id/signupButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Create Doctor Account"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@drawable/btn_primary_purple"
            android:textColor="@android:color/white"
            android:elevation="3dp"/>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginTop="24dp"
            android:indeterminateTint="#3B82F6"/>

    </LinearLayout>
</ScrollView>