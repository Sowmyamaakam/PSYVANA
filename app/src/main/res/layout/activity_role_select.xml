<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/bg_welcome_gradient">

    <!-- App Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Psyvana"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#7C3AED"
        android:layout_marginTop="40dp"/>

    <!-- Subtitle with emojis -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’—"
            android:textSize="16sp"
            android:layout_marginEnd="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Mental Health Companion"
            android:textSize="16sp"
            android:textColor="#6B7280"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ¨"
            android:textSize="16sp"
            android:layout_marginStart="6dp"/>
    </LinearLayout>

    <!-- Brain Icon with rounded background -->
    <FrameLayout
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_icon_rounded"
        android:elevation="8dp"
        android:layout_marginBottom="48dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:contentDescription="Brain icon"
            android:src="@drawable/ic_heart"
            android:tint="@android:color/white" />
    </FrameLayout>

    <!-- Welcome Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="#1F2937"
        android:layout_marginBottom="12dp"/>

    <!-- Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose how you want to continue"
        android:textSize="16sp"
        android:textColor="#6B7280"
        android:layout_marginBottom="48dp"/>

    <!-- Login as User Button -->
    <Button
        android:id="@+id/loginUserButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Login as User"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/btn_primary_purple"
        android:textColor="@android:color/white"
        android:elevation="3dp"
        android:layout_marginBottom="16dp"/>

    <!-- Login as Monitor Button -->
    <Button
        android:id="@+id/loginDoctorButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Login as Monitor"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/btn_primary_purple"
        android:textColor="@android:color/white"
        android:elevation="3dp"
        android:layout_marginBottom="24dp"/>

    <!-- Footer Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start your journey to better mental wellness"
        android:textSize="14sp"
        android:textColor="#9CA3AF"
        android:textAlignment="center"
        android:layout_marginTop="8dp"/>

</LinearLayout>