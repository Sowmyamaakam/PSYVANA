<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFEFEF"
    android:padding="12dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Audio Consultation"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/sessionInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/endedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Session Ended"
        android:textStyle="bold"
        android:textColor="#B00020"
        android:background="#FFF1F1"
        android:padding="8dp"
        android:visibility="gone"
        android:layout_marginBottom="8dp"/>

    <!-- Doctor notes after call -->
    <LinearLayout
        android:id="@+id/doctorNotesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#FFFFFF"
        android:visibility="gone"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Session Notes"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/doctorNotesEditText"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top|start"
            android:hint="Write notes here..."
            android:background="@android:color/transparent"
            android:layout_marginTop="4dp"/>

        <Button
            android:id="@+id/uploadReportButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload PDF Report"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- User report download -->
    <LinearLayout
        android:id="@+id/userReportContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="8dp"
        android:background="#FFFFFF"
        android:visibility="gone"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/downloadReportButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download Report"/>
    </LinearLayout>

</LinearLayout>
