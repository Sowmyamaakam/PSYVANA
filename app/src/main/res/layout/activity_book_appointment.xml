<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            android:contentDescription="back"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Appointment"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/gray_900"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctor"
            android:textStyle="bold"
            android:textColor="@color/gray_800"/>
        <TextView
            android:id="@+id/doctorNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctor"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modality: "/>
            <TextView
                android:id="@+id/modalityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: "/>
            <TextView
                android:id="@+id/priceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INR -"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/statusRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: "/>
            <TextView
                android:id="@+id/appointmentStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"/>
        </LinearLayout>

        <EditText
            android:id="@+id/dateEdit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:focusable="false"
            android:clickable="true"
            android:background="@drawable/edittext_background"
            android:hint="Select date"
            android:padding="10dp"/>

        <Space android:layout_width="match_parent" android:layout_height="8dp"/>

        <Spinner
            android:id="@+id/timeSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_background"
            android:padding="10dp"/>

        <Space android:layout_width="match_parent" android:layout_height="8dp"/>

        <EditText
            android:id="@+id/durationEdit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_background"
            android:hint="Duration (minutes)"
            android:inputType="number"
            android:padding="10dp"/>

        <Button
            android:id="@+id/bookButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Request Appointment"
            android:textStyle="bold"
            android:backgroundTint="@color/blue_600"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/joinButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Join Session"
            android:textStyle="bold"
            android:backgroundTint="@color/blue_600"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginTop="12dp"/>

    </LinearLayout>
</ScrollView>
