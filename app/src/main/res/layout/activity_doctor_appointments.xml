<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F5F3FF">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:src="@drawable/ic_back"
        android:background="@drawable/bg_back_button"
        android:contentDescription="Back"
        android:elevation="3dp"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Appointments"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="#1E293B"
        android:layout_marginBottom="16dp"/>

    <!-- Profile Header Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:elevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/profileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctor Name"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/profileModalities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video, Call, Text"
                android:layout_marginTop="4dp"
                android:textColor="@color/gray_700"/>

            <TextView
                android:id="@+id/profileRates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rates: Video INR 1000 • Call INR 700 • Text INR 500"
                android:layout_marginTop="2dp"
                android:textColor="@color/gray_700"/>

            <TextView
                android:id="@+id/profileAvailability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Availability: Mon 09:00-17:00, Tue ..."
                android:layout_marginTop="2dp"
                android:textColor="@color/gray_700"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="8dp">
                <Button
                    android:id="@+id/editProfileButton"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:text="Edit Profile"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:background="@drawable/btn_outlined_purple"
                    android:textColor="#7C3AED"/>

                <Button
                    android:id="@+id/doctorHistoryButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:text="Consultation History"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/btn_primary_purple"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:indeterminateTint="#7C3AED"/>

    <TextView
        android:id="@+id/emptyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No appointments yet"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
