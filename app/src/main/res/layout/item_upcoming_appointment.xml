<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Session • INR 0"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon, 01 Jan 2024 • 09:00"
            android:layout_marginTop="2dp"
            android:textColor="@color/gray_700"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accepted"
            android:layout_marginTop="4dp"
            android:textColor="@color/gray_800"/>

        <TextView
            android:id="@+id/statusHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctor started the session — tap to join"
            android:textStyle="bold"
            android:textColor="#1B5E20"
            android:background="#E8F5E9"
            android:padding="6dp"
            android:layout_marginTop="6dp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/callButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Join Call"
                android:layout_marginEnd="8dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/videoButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Join Video"
                android:layout_marginEnd="8dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/chatButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Open Chat"
                android:layout_marginEnd="8dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/startButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Start"
                android:layout_marginEnd="8dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/completeButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Complete"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
