<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission for GPT-4 API calls -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Project"
        tools:targetApi="31">

        <!-- Role Select as Launcher -->
        <activity
            android:name=".RoleSelectActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Login Activity (non-launcher) -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>

        <!-- SignUp Activity -->
        <activity
            android:name=".SignUpActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!-- Home Activity -->
        <activity
            android:name=".HomeActivity"
            android:exported="false"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".BookAppointmentActivity"
            android:exported="false" />

        <activity
            android:name=".DoctorNotesActivity"
            android:exported="false" />

        <receiver
            android:name=".ReminderReceiver"
            android:exported="false" />

        <activity
            android:name=".SelfAssessmentActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity"/>
        </activity>

        <!-- AI Recommendations Activity -->
        <activity
            android:name=".AIRecommendationsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>




        <!-- Recommendations Activity -->
        <activity
            android:name=".RecommendationsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>
        <!-- Recommendation Detail Activity -->
        <activity
            android:name=".RecommendationDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".AIRecommendationsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AIRecommendationsActivity" />
        </activity>
        <activity android:name=".AssessmentResultsActivity" />



        <!--        <activity android:name=".RecommendationsActivity"/>-->
        <activity android:name=".ProgressActivity"/>
        <activity android:name=".ProfessionalHelpActivity"/>


        <!-- Doctor Auth Activities -->
        <activity
            android:name=".DoctorLoginActivity"/>

        <activity
            android:name=".DoctorSignupActivity"/>

        <activity
            android:name=".DoctorProfileActivity"/>

        <activity
            android:name=".DoctorListActivity"/>
        <activity
            android:name=".DoctorAppointmentsActivity"/>

        <!-- Appointment History Activity -->
        <activity
            android:name=".AppointmentHistoryActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>

        <!-- Upcoming Appointments Activity -->
        <activity
            android:name=".UpcomingAppointmentsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>

        <!-- Chat Activity -->
        <activity
            android:name=".ChatActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>

        <!-- Doctor History Activity -->
        <activity
            android:name=".DoctorHistoryActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".DoctorAppointmentsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DoctorAppointmentsActivity" />
        </activity>

        <service
            android:name=".MyFirebaseService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".AudioCallActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".VideoCallActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

    </application>

</manifest>